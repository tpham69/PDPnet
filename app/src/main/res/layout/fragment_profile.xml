<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/avatarImageView"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/avatarImageView"
            android:layout_marginTop="16dp"
            android:text="Email:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/avatarImageView"
            android:layout_alignTop="@id/emailLabel"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="16dp"
            android:layout_toRightOf="@id/emailLabel"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/streakLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailTextView"
            android:text="Chuỗi chạy bộ:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/streakTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailTextView"
            android:layout_alignTop="@id/streakLabel"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="16dp"
            android:layout_toRightOf="@id/streakLabel"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/todayDistanceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/streakTextView"
            android:text="Quãng đường hôm nay:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/todayDistanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/streakTextView"
            android:layout_alignTop="@id/todayDistanceLabel"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="16dp"
            android:layout_toRightOf="@id/todayDistanceLabel"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/totalDistanceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/todayDistanceTextView"
            android:text="Tổng quãng đường:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalDistanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/todayDistanceTextView"
            android:layout_alignTop="@id/totalDistanceLabel"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="16dp"
            android:layout_toRightOf="@id/totalDistanceLabel"
            android:textSize="18sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDoiMatKhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="170dp"
            android:backgroundTint="#8BC34A"
            android:text="Đổi mật khẩu"
            app:cornerRadius="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDangXuat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="120dp"
            android:backgroundTint="#FF5722"
            android:text="Đăng xuất"
            app:cornerRadius="2dp" />

    </RelativeLayout>

</FrameLayout>